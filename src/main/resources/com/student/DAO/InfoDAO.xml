<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.student.DAO.InfoDAO">
    <resultMap id="infoMap" type="com.student.model.Student">
        <id property="sno" column="sno"/>
        <result property="name" column="sname"/>
        <result property="clazz" column="sclass"/>
        <result property="s1" column="s1"/>
        <result property="s2" column="s2"/>
        <result property="s3" column="s3"/>
        <result property="s4" column="s4"/>
        <result property="s5" column="s5"/>
        <result property="s6" column="s6"/>
        <result property="s7" column="s7"/>
        <result property="s8" column="s8"/>
        <result property="s9" column="s9"/>
        <result property="s10" column="s10"/>
    </resultMap>

    <delete id="delete">
        delete
        from info
        where sno=#{sno};
    </delete>

    <update id="update1">
        update info
        set s1 = ${score}
        where sno=#{sno};
    </update>

    <update id="update2">
        update info
        set s2 = ${score}
        where sno=#{sno};
    </update>

    <update id="update3">
        update info
        set s3 = ${score}
        where sno=#{sno};
    </update>

    <update id="update4">
        update info
        set s4 = ${score}
        where sno=#{sno};
    </update>

    <update id="update5">
        update info
        set s5 = ${score}
        where sno=#{sno};
    </update>

    <update id="update6">
        update info
        set s6 = ${score}
        where sno=#{sno};
    </update>

    <update id="update7">
        update info
        set s7 = ${score}
        where sno=#{sno};
    </update>

    <update id="update8">
        update info
        set s8 = ${score}
        where sno=#{sno};
    </update>

    <update id="update9">
        update info
        set s9 = ${score}
        where sno=#{sno};
    </update>

    <update id="update10">
        update info
        set s10 = ${score}
        where sno=#{sno};
    </update>

    <select id="selectBySno" resultMap="infoMap">
        select *
        from studentcard where studentid=#{sno};
    </select>

    <select id="selectByClazz" resultMap="infoMap">
        select * from info where sclass=#{clazz}
    </select>

    <select id="selectAll" resultMap="infoMap">
        select * from info
    </select>

</mapper>