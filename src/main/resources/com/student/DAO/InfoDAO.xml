<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.student.DAO.InfoDAO">
    <resultMap id="infoMap" type="com.student.model.Student">
        <id property="sno" column="sno"/>
        <result property="sname" column="name"/>
        <result property="classs" column="class"/>
        <result property="s1" column="s1"/>
        <result property="s2" column="s2"/>
        <result property="s3" column="s3"/>
        <result property="s4" column="s4"/>
        <result property="s5" column="s5"/>
        <result property="s6" column="s6"/>
        <result property="s7" column="s7"/>
        <result property="s8" column="s8"/>
        <result property="s9" column="s9"/>
        <result property="s10" column="s10"/>
    </resultMap>

    <delete id="delete">
        delete
        from info
        where studentid=#{sno};
    </delete>

    <update id="update">
        update studentcard
        set name = #{name},gender=#{gender},college=#{college},class=#{classs},idcard=#{idcard},nativeplace=#{nativeplace},birthday=#{birthday}
        where studentid=#{sno};
    </update>

    <select id="selectBySno" resultMap="infoMap">
        select *
        from studentcard where studentid=#{sno};
    </select>

    <select id="selectByClazz" resultMap="infoMap">
        select * from info where sclass=#{clazz}
    </select>

    <select id="selectAll" resultMap="infoMap">
        select * from info
    </select>

</mapper>